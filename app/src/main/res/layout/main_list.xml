<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:background="@color/white"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/moneyAmount"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:textSize="35sp"
            android:textColor="@android:color/black" app:layout_constraintEnd_toStartOf="@+id/currency"
            android:layout_marginEnd="4dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/source"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" android:textSize="25sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textColor="@color/lightGreyText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/source"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/currency" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            android:textSize="35sp" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"/>
</android.support.constraint.ConstraintLayout>